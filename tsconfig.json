{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["src/helpers/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "src/**/*.ts",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules"]
}
